@model IEnumerable<Online_Shopping.Models.SubCategory>

@{
    ViewBag.Title = "SubCategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategoryList</h2>

<p>
    @Html.ActionLink("Create New", "AddSubCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CatID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCatName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCatName)
        </td>
        <td>
            @Html.ActionLink("Edit", "AddSubCategory", new { id=item.SubCatID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubCatID })
        </td>
    </tr>
}

</table>

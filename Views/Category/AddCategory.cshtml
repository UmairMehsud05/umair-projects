@model Online_Shopping.Models.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-4">
        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading">
                    <h4 class="card-title">Add Category</h4>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(x => x.CatID)
                    <label>Category Name</label>
                    <div class="form-group">
                        @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Category" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div class="card card-statistics">
            <div class="card-body">
                <div class="export-table-wrapper table-responsive">
                    <table id="export-table" class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.CategoryList)
                            {
                                <tr>
                                    <td>
                                        @item.CatName
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "AddCategory", new { id = item.CatID },new {@class = "btn btn-primary zmdi zmdi-edit" })
                                        @Html.ActionLink(" ", "Delete", new { id = item.CatID },new { @class = "btn btn-danger zmdi zmdi-delete" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

